{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "Title": "Docker Encapsulated Environment",
  "id": "docker_enc_environment",
  "properties": {
    "environment_type": {
      "type": "string",
      "enum":["docker-encapsulated"],
      "default":"docker-encapsulated"
    },
    "image": {
      "type": "string",
      "title": "Image"
    },
    "imagetag": {
      "type": "string",
      "title": "Tag",
      "default":"latest"
   },
    "resources": {
      "type": "array",
      "title": "Resources",
      "items": {
        "type": "string"
      },
      "default":[]
    },
    "envscript": {
      "type": "string",
      "title": "Env Script",
      "default":""
    },
    "env": {
      "type": "object",
      "title": "Env Vars",
      "properties": {},
      "default":{}
    }
  },
  "required": [
    "environment_type",
    "image"
  ]
}