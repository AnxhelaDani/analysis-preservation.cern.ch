{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Detector State",
  "description": "Information concerning the state of the detector",
  "type": "object",
  "properties": {
    "measurement_description": {
      "title": "Measurement Description",
      "type": "string"
    },
    "detailed_measurement_description": {
      "title": "Description Details",
      "type": "string"
    },
    "code_base": {
      "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/CMSUserCode.json"
    },
    "n_tuple": {
      "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/CMSInputCodeOutput.json"
    },
    "detector_final_state": {
      "title": "Event Selection",
      "type": "object",
      "properties": {
        "final_state_particles": {
          "title": "Physics Objects",
          "type": "array",
          "default": [{}],
          "items": {
            "type": "object",
            "properties": {
              "object": {
                "title": "Object",
                "type": "string",
                "enum": [
                  "electron",
                  "muon",
                  "tau",
                  "jet",
                  "bjet",
                  "photon",
                  "track",
                  "vertex",
                  "MET",
                  "HT"
                ]
              },
              "jet_type": {
                "type": "string",
                "title": "Jet type",
                "enum": [
                  "AK4",
                  "AK8"
                ],
                "dependencies": [
                  "object"
                ]
              },
              "sel_criteria": {
                "type": "string",
                "title": "Selection Criteria",
                "enum": ["tight", "loose", "other"],
                "dependencies": [
                  "object"
                ]
              },
              "isolation": {
                "title": "Isolation",
                "type": "object",
                "properties": {
                  "notracks": {
                    "title": "no tracks",
                    "type": "object",
                    "properties": {
                      "pTg": {
                        "type": "number",
                        "title": "pT >"
                      },
                      "deltaRs": {
                        "type": "number",
                        "title": "ΔR <"
                      }
                    }
                  },
                  "calorimeter": {
                    "title": "calorimeter",
                    "type": "object",
                    "properties": {
                      "pTs": {
                        "type": "number",
                        "title": "pT <"
                      },
                      "deltaRs": {
                        "type": "number",
                        "title": "ΔR <"
                      }
                    }
                  }
                },
                "dependencies": [
                  "sel_criteria"
                ]
              },
              "number": {
                "title": "Number",
                "type": "object",
                "properties": {
                  "sign": {
                    "type": "string",
                    "title": "<, >, =, <=, >=",
                    "enum": [
                      "<",
                      ">",
                      "=",
                      "<=",
                      ">="
                    ],
                    "default": "="
                  },
                  "number": {
                    "type": "number",
                    "title": "Number"
                  }
                },
                "dependencies": [
                  "object"
                ]
              },
              "number_vertex": {
                "title": "Number",
                "type": "object",
                "properties": {
                  "sign": {
                    "type": "string",
                    "title": "=",
                    "enum": [
                      "="
                    ]
                  },
                  "number": {
                    "type": "number",
                    "title": "Number"
                  }
                },
                "dependencies": [
                  "object"
                ]
              },
              "number_tracks": {
                "title": "Number of Tracks",
                "type": "object",
                "properties": {
                  "number": {
                    "type": "number",
                    "title": ">"
                  }
                },
                "dependencies": [
                  "object"
                ]
              },
              "bjet_identifier": {
                "title": "Identifier",
                "type": "object",
                "properties": {
                  "tag": {
                    "type": "string",
                    "title": "Tag",
                    "enum": [
                      "trackCountingHighPurBJetTags",
                      "trackCountingHighEffBJetTags",
                      "simpleSecondaryVertexHighEffBJetTags",
                      "simpleSecondaryVertexHighEffBJetTags",
                      "combinedSecondaryVertexBJetTags",
                      "jetProbabilityBJetTags"
                    ]
                  },
                  "value": {
                    "type": "number",
                    "title": "Value"
                  }
                },
                "dependencies": [
                  "object"
                ]
              },
              "pt_cut": {
                "title": "pT Cuts",
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "sign": {
                      "type": "string",
                      "title": "<, >, =",
                      "enum": [
                        ">",
                        "=",
                        "<"
                      ],
                      "default": ">"
                    },
                    "number": {
                      "type": "number",
                      "title": "GeV"
                    }
                  }
                },
                "dependencies": [
                  "object"
                ]
              },
              "era_cut": {
                "title": "|η| Cuts",
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "sign": {
                      "type": "string",
                      "title": "<, >, =",
                      "enum": [
                        ">",
                        "=",
                        "<"
                      ],
                      "default": ">"
                    },
                    "number": {
                      "type": "number",
                      "title": " "
                    }
                  }
                },
                "dependencies": [
                  "object"
                ]
              }
            }
          }
        },
        "final_state_relations": {
          "title": "Relations",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "relation_type": {
                "type": "string",
                "title": "Relation Type",
                "enum": ["charge", "angle", "invariant mass"]
              },
              "charge_relation": {
                "type": "string",
                "title": "Charge",
                "enum": ["same sign", "opposite sign"],
                "dependencies": [
                  "relation_type"
                ]
              },
              "angle_relation": {
                "type": "number",
                "title": "Degrees",
                "dependencies": [
                  "relation_type"
                ]
              },
              "invariant_mass": {
                "title": "GeV",
                "type": "object",
                "properties": {
                  "lower_range": {
                    "type": "number",
                    "title": "<"
                  },
                  "upper_range": {
                    "type": "number",
                    "title": ">"
                  }
                },
                "dependencies": [
                  "relation_type"
                ]
              }
            }
          }
        },
        "veto": {
          "title": "Vetos",
          "description": "Provide vetos",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "particle": {
                "title": "Particle",
                "type": "string",
                "enum": ["electron", "muon", "bjet"]
              },
              "number": {
                "title": "Number",
                "type": "integer"
              },
              "pt_cut": {
                "title": "PT",
                "type": "string"
              },
              "era_cut": {
                "title": "ETA",
                "type": "string"
              }
            }
          }
        }
      }
    },
    "event_selection": {
      "title": "Event Filter",
      "type": "object",
      "properties": {
        "event_filter": {
          "title": "Event Filter",
          "type": "string",
          "enum": ["HCAL noise cleaning filter", "ECAL spike removal"]
        },
        "reference": {
          "title": "Reference",
          "type": "string"
        }
      }
    }
  }
}
