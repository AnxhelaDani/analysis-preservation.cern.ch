{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Internal Publication",
  "description": "Add publications",
  "type": "object",
  "properties": {
    "persistent_identifiers": {
      "title": "Identifiers",
      "type": "array",
      "items": {
        "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/Identifiers-vtest01.json"
      }
    },
    "journal_title": {
      "title": "Journal Title",
      "type": "string"
    },
    "journal_year": {
      "title": "Journal Year",
      "type": "integer"
    },
    "journal_volume": {
      "title": "Journal Volume",
      "type": "integer"
    },
    "journal_issue": {
      "title": "Journal Issue",
      "type": "integer"
    },
    "journal_page": {
      "title": "Journal Page",
      "type": "integer"
    },
    "short_title": {
      "title": "Short Title",
      "description": "Publication short title (from Glance)",
      "type": "string"
    },
    "full_title": {
      "title": "Full Title",
      "description": "Publication full title (from Glance)",
      "type": "string"
    },
    "ref_code": {
      "title": "Reference Code",
      "description": "Publication reference code (from Glance)",
      "type": "string"
    },
    "editorial_board": {
      "title": "Editorial Board",
      "description": "Members of the editorial board (from Glance)",
      "type": "array",
      "items": {
        "title": "Editorial Board Member",
        "type": "object",
        "id": "editorial_board",
        "properties": {
          "first_name": {
            "title": "Editor's First Name",
            "type": "string"
          },
          "last_name": {
            "title": "Editor's Last Name",
            "type": "string"
          },
          "cern_ccid": {
            "title": "Editor's CERN CCID",
            "type": "string"
          },
          "function": {
            "title": "Editorial Function",
            "type": "string"
          }
        }
      }
    }
  }
}